    <!-- Script corregido con mayor velocidad y reinicio al inicio -->
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const slider = document.getElementById("galeriaSlider");
        const prevBtn = document.getElementById("prevBtn");
        const nextBtn = document.getElementById("nextBtn");
        const scrollAmount = 300; // Tamaño del scroll por paso
        const intervalTime = 2000; // Cambia cada 2 segundos (ajustable)

        if (prevBtn && slider) {
          prevBtn.addEventListener("click", () => {
            slider.scrollBy({ left: -scrollAmount, behavior: "smooth" });
          });
        }

        if (nextBtn && slider) {
          nextBtn.addEventListener("click", () => {
            slider.scrollBy({ left: scrollAmount, behavior: "smooth" });
          });
        }

        if (slider) {
          setInterval(() => {
            // ¿Ya llegó al final?
            if (
              slider.scrollLeft + slider.clientWidth >=
              slider.scrollWidth - 5
            ) {
              // Reinicia al inicio
              slider.scrollTo({ left: 0, behavior: "smooth" });
            } else {
              // Avanza normalmente
              slider.scrollBy({ left: scrollAmount, behavior: "smooth" });
            }
          }, intervalTime);
        }
      });
    </script>

