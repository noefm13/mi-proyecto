          >COMPRAR AHORA</a
        >
      </div>
    </section>

    <!-- Quiénes Somos -->
    <!-- Sección principal -->
    <section
      id="quienes-somos"
      class="bg-gradient-to-b from-white to-blue-300 py-24 text-center"
    >
      <h1 class="text-5xl font-bold text-black">Quiénes somos</h1>
    </section>

    <!-- Bloques informativos -->
    <section class="bg-blue-50">
      <!-- Bloque 1 -->
      <div class="grid grid-cols-1 md:grid-cols-2">
        <!-- Imagen izquierda -->
        <div>
          <img
            src="/public/images/promocion1.jpg"
            alt="Producto empacado"
            class="w-full h-full object-cover"
          />
        </div>
        <!-- Texto derecha -->
        <div class="p-8 flex flex-col justify-center text-left">
          <h2 class="text-2xl font-semibold text-blue-800 mb-4">
            Nuestra Misión
          </h2>
          <p class="text-sm text-gray-700 leading-relaxed">
            Somos una empresa comprometida con la calidad, la sostenibilidad y
            el diseño consciente. Trabajamos para ofrecer productos que inspiren
            y se mantengan fieles a nuestros valores.
          </p>
        </div>
      </div>

      <!-- Bloque 2 -->
      <div class="grid grid-cols-1 md:grid-cols-2">
        <!-- Texto izquierda -->
        <div
          class="p-8 flex flex-col justify-center text-left order-2 md:order-1"
        >
          <h2 class="text-2xl font-semibold text-blue-800 mb-4">
            Nuestro Proceso Creativo
          </h2>
          <p class="text-sm text-gray-700 leading-relaxed">
            Cada producto nace de un proceso colaborativo entre diseñadores,
            artesanos y clientes. Desde el boceto hasta el acabado final,
            cuidamos cada detalle para garantizar autenticidad y estilo.
          </p>
        </div>
        <!-- Imagen derecha -->
        <div class="order-1 md:order-2">
          <img
            src="/public/images/promocion1.jpg"
            alt="Proceso creativo"
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </section>

    <!-- Servicios -->
    <section id="servicios" class="py-24 px-6 bg-white text-center">
      <h2
        class="text-4xl font-extrabold text-gray-800 mb-12"
        data-aos="fade-up"
      >
        Nuestros Servicios
      </h2>

      <div class="grid md:grid-cols-3 gap-10 max-w-6xl mx-auto">
        <div
          class="bg-white shadow-xl rounded-2xl p-8 transition transform hover:scale-105 duration-300"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          <h3 class="text-2xl font-semibold text-indigo-600 mb-4">
            Diseño Personalizado
          </h3>
          <p class="text-gray-600">Personaliza tus tenis a tu estilo único.</p>
        </div>

        <div
          class="bg-white shadow-xl rounded-2xl p-8 transition transform hover:scale-105 duration-300"
          data-aos="fade-up"
          data-aos-delay="200"
        >
          <h3 class="text-2xl font-semibold text-indigo-600 mb-4">
            Envíos Nacionales
          </h3>
          <p class="text-gray-600">Entrega rápida en todo el país.</p>
        </div>

        <div
          class="bg-white shadow-xl rounded-2xl p-8 transition transform hover:scale-105 duration-300"
          data-aos="fade-up"
          data-aos-delay="300"
        >
          <h3 class="text-2xl font-semibold text-indigo-600 mb-4">
            Asesoría en Línea
          </h3>
          <p class="text-gray-600">
            Te ayudamos a elegir el mejor calzado para ti.
          </p>
        </div>
      </div>
    </section>

    <!-- Galería -->
    <section id="galeria" class="py-16 px-6 bg-gray-50 text-center relative">
      <h2 class="text-3xl font-bold mb-8">Galería</h2>
      <div class="relative max-w-6xl mx-auto overflow-hidden">
        <!-- Botón Izquierdo -->
        <button
          id="prevBtn"
          class="absolute left-2 top-1/2 -translate-y-1/2 z-10 bg-white border border-gray-300 hover:bg-orange-500 hover:text-white text-black p-3 rounded-full shadow transition-all"
        >
          &#10094;
        </button>

        <!-- Carrusel -->
        <div
          id="galeriaSlider"
          class="flex overflow-x-auto gap-4 scroll-smooth snap-x snap-mandatory scrollbar-hide"
        >
          <img
            src="/images/niño-jogger.png"
            alt="Tenis 1"
            class="min-w-[250px] h-[400px] object-contain rounded shadow snap-center"
          />
          <img
            src="/images/hi.jpg"
            alt="Tenis 2"
            class="min-w-[250px] h-[400px] object-contain rounded shadow snap-center"
          />
          <img
            src="/images/sueter.png"
            alt="Tenis 3"
            class="min-w-[250px] h-[400px] object-contain rounded shadow snap-center"
          />
          <img
            src="/images/22.jpg"
            alt="Tenis 4"
            class="min-w-[250px] h-[400px] object-contain rounded shadow snap-center"
          />
          <img
            src="/images/23.jpg"
            alt="Tenis 4"
            class="min-w-[250px] h-[400px] object-contain rounded shadow snap-center"
          />
          <img
            src="/images/niño.png"
            alt="Tenis 4"
            class="min-w-[250px] h-[400px] object-contain rounded shadow snap-center"
          />
          <img
            src="/images/hi.jpg"
            alt="Tenis 4"
            class="min-w-[250px] h-[400px] object-contain rounded shadow snap-center"
          />
        </div>

        <!-- Botón Derecho -->
        <button
          id="nextBtn"
          class="absolute right-2 top-1/2 -translate-y-1/2 z-10 bg-white border border-gray-300 hover:bg-orange-500 hover:text-white text-black p-3 rounded-full shadow transition-all"
        >
          &#10095;
        </button>
      </div>
    </section>

    <!-- Script corregido con mayor velocidad y reinicio al inicio -->
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const slider = document.getElementById("galeriaSlider");
        const prevBtn = document.getElementById("prevBtn");
        const nextBtn = document.getElementById("nextBtn");
        const scrollAmount = 300; // Tamaño del scroll por paso
        const intervalTime = 2000; // Cambia cada 2 segundos (ajustable)

        if (prevBtn && slider) {
          prevBtn.addEventListener("click", () => {
            slider.scrollBy({ left: -scrollAmount, behavior: "smooth" });
          });
        }

        if (nextBtn && slider) {
          nextBtn.addEventListener("click", () => {
            slider.scrollBy({ left: scrollAmount, behavior: "smooth" });
          });
        }

        if (slider) {
          setInterval(() => {
            // ¿Ya llegó al final?
            if (
              slider.scrollLeft + slider.clientWidth >=
              slider.scrollWidth - 5
            ) {
              // Reinicia al inicio
              slider.scrollTo({ left: 0, behavior: "smooth" });
            } else {
              // Avanza normalmente
              slider.scrollBy({ left: scrollAmount, behavior: "smooth" });
            }
          }, intervalTime);
        }
      });
    </script>

    <!-- Ubicación -->
    <section id="ubicacion" class="py-16 px-6 text-center bg-white">
